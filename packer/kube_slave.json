{
  "provisioners": [
    {   
      "type": "shell",
      "inline": [
        "sleep 30",
        "sudo apt-get update",
        "sudo apt-get install -y libssl-dev libffi-dev python-dev build-essential",
        "wget https://bootstrap.pypa.io/get-pip.py",
        "sudo python get-pip.py",
        "sudo pip install pyopenssl ndg-httpsclient pyasn1",
        "sudo pip install 'ansible==2.4.2.0'",
        "ansible --version"
      ]   
    },  
    {
      "type": "ansible-local",
      "playbook_dir": "{{ user `pwd` }}/",
      "playbook_file": "kube-master.yml",
      "role_paths": [
        "../roles/python",
        "../roles/hosts",
        "../roles/kube-master"
      ],
      "extra_arguments": [ "--tags", "configure,deploy", "-u", "{{user `ssh_user`}}", "-vvvv", "-e", "\"tag_name={{user `tag_name`}} tag_environment={{user `tag_env`}} s3_bucket_name={{user `s3_bucket_name`}} kubernetes_environment={{user `tag_env`}} tag_name={{user `tag_name`}} kube_master_ip={{user `kube_master_ip`}} kube_master_tag={{user `kube_master_tag`}}\"" ]
    }
  ],
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "kube_master_ip": "{{env `KUBE_MASTER_IP`}}",
    "kube_master_tag": "{{env `kube_master_tag`}}",
    "pwd": "{{ env `PWD` }}",
    "tag_name": "{{env `TAG_NAME`}}",
    "tag_env": "{{env `TAG_ENV`}}",
    "source_ami": "{{env `AMI_ID`}}",
    "security_group_id": "{{env `SG_ID`}}",
    "ssh_user": "{{env `SSH_USER`}}",
    "subnet_id": "{{env `PRIVATE_SUBNET_ID`}}",
    "region": "{{env `REGION`}}",
    "IAM_ROLE": "{{env `IAM_ROLE`}}",
    "s3_bucket_name": "{{env `S3_BUCKET_NAME`}}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "security_group_id": "{{user `security_group_id`}}",
    "subnet_id": "{{user `subnet_id`}}",
    "source_ami": "{{user `source_ami`}}",
    "ssh_username": "{{user `ssh_user`}}",
    "region": "{{user `region`}}",
    "ami_name": "kubernetes-master-{{timestamp}}",
    "instance_type": "t2.micro",
    "iam_instance_profile": "{{user `IAM_ROLE`}}",
    "tags": {
      "Name": "{{user `tag_name`}}-{{user `tag_env`}}"
    }
  }]
}
